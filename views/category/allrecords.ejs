<% if (allrecs.length > 0) {%>
<table>
    <!-- add table header -->
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td><%= recref.category_id %></td>
    <td><%= recref.categoryname %></td>
    <td><%= recref.description %></td>
    <td><a href="/category/<%= recref.category_id %>/show"> Details</a></td>
    <td>
      <a href="/category/<%= recref.category_id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/category/<%= recref.category_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/category/addrecord">Add New</a></p>
