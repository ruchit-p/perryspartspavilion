<% if (allrecs.length > 0) {%>
<table class="allData">
    <!-- add table header -->
    <tr class="thr">
      <th class="leftPadTable tableCell">ID</th>
      <th class="tableCell">Name</th>
      <th class="tableCell">Description</th>
      <th class="tableCell">Details</th>
      <th class="tableCell">Edit</th>
      <th class="tableCell">Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td class="leftPadTable tableCell"><%= recref.category_id %></td>
    <td class="tableCell"><%= recref.categoryname %></td>
    <td class="tableCell"><%= recref.description %></td>
    <td class="tableCell"><a href="/category/<%= recref.category_id %>/show"> Details</a></td>
    <td class="tableCell">
      <a href="/category/<%= recref.category_id %>/edit">Edit</a>
    </td>
    <td class="tableCell">
      <a href="/category/<%= recref.category_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/category/addrecord">Add New</a></p>
