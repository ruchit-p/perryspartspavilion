<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <div class="banner-container">
    <img class="homepage-banner" src="/images/homepage-banner2.jpg" alt="Banner Image" />
    <h1 class="banner-text">Power Your Future Today</h1>
  </div>
  <div class="container-fluid">
    <div class="row justify-content-evenly">
      <div class="col-auto mb-4 sub-banner align-items-center">
        <p class="mt-2">
          We are here to help you with all your solar needs.
        </p>
      </div>
      <div class="col-10 align-top mt-4 mb-4">
        <table>
          <tr>
            <td>
              <% if (allrecs.length> 0) {%>
                <% allrecs.forEach((recref, index)=> { %>
                  <div class="product">
                    <div class="productImage">
                      <img class="prodImage" src="/images/<%= recref.prodimage %>" alt="<%= recref.prodimage %>">
                    </div>
                    <div class="productInfo">
                      <div class="productName">
                        <h1>
                          <%= recref.productname %>
                        </h1>
                      </div>
                      <p class="price">$<%= recref.prodprice %>
                      </p>
                      <p class="productStatus">
                        <%= recref.status %>
                      </p>
                      <a class="button" href='/product/<%= recref.product_id %>/show'>Details</a>
                    </div>
                  </div>
                  <% }); %>
                    <% } %>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-2 mt-4 float-end align-top justify-content-end d-flex">
        <div class="row align-top justify-content-start">
          <% if (promos.length> 0) {%>
            <% promos.forEach((recref, index)=> { %>
              <div class="promoImg">
                <img class="promoImage" src="/images/<%= recref.promoimage %>" alt="">
              </div>
              <% }); %>
                <% } %>
        </div>
      </div>
    </div>
  </div>
</body>

</html>