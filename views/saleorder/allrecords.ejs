<% if (allrecs.length > 0) {%>
<table class="allData">
    <!-- add table header -->
    <tr class="thr">
      <th class="leftPadTable tableCell">Order ID</th>
      <th class="tableCell">Customer ID</th>
      <th class="tableCell">Sale Date</th>
      <th class="tableCell">Customer Notes</th>
      <th class="tableCell">Payment Status</th>
      <th class="tableCell">Authorization Number</th>
      <th class="tableCell">Details</th>
      <th class="tableCell">Edit</th>
      <th class="tableCell">Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td class="leftPadTable tableCell"><%= recref.order_id %></td>
    <td class="tableCell"><%= recref.customer_id %></td>
    <td class="tableCell"><%= recref.saledate %></td>
    <td class="tableCell"><%= recref.customernotes %></td>
    <td class="tableCell"><%= recref.paymentstatus %></td>
    <td class="tableCell"><%= recref.authorizationnum %></td>
    <td class="tableCell"><a href="/saleorder/<%= recref.order_id %>/show"> Details</a></td>
    <td class="tableCell">
      <a href="/saleorder/<%= recref.order_id %>/edit">Edit</a>
    </td>
    <td class="tableCell">
      <a href="/saleorder/<%= recref.order_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/saleorder/addrecord">Add New</a></p>
