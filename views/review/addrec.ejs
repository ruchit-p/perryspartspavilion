<h1>New Record</h1>
<form action="/review" method="post">
  <table>
    <tr>
      <td>Customer ID:</td>
      <td><input type="text" name="customer_id" required /></td>
    </tr>
    <tr>
      <td>Product ID:</td>
      <td><input type="text" name="product_id" required /></td>
    </tr>
    <tr>
      <td>Review Date:</td>
      <td><input type="date" name="reviewdate" required /></td>
    </tr>
    <tr>
      <td>Comments:</td>
      <td><textarea
          name="comments"
          rows="10"
          cols="30"
          placeholder="Comments"
        ></textarea></td>
    </tr>
    <tr>
      <td>Rating:</td>
      <td><input type="text" name="rating" required /></td>
    </tr>
    <tr>
      <td>Status:</td>
      <td><input type="text" name="status" required /></td>
    </tr>
  </table>
  <button type="submit">Save</button>
</form>
