<% if (allrecs.length > 0) {%>
<table class="allData">
    <!-- add table header -->
    <tr class="thr">
      <th class="leftPadTable tableCell">ID</th>
      <th class="tableCell">Name</th>
      <th class="tableCell">Point of Contact</th>
      <th class="tableCell">Weburl</th>
      <th class="tableCell">Supplier Notes</th>
      <th class="tableCell">Details</th>
      <th class="tableCell">Edit</th>
      <th class="tableCell">Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td class="leftPadTable tableCell"><%= recref.supplier_id %></td>
    <td class="tableCell"><%= recref.suppliername %></td>
    <td class="tableCell"><%= recref.pointofcontact %></td>
    <td class="tableCell"><%= recref.weburl %></td>
    <td class="tableCell"><%= recref.suppliernotes %></td>
    <td class="tableCell"><a href="/supplier/<%= recref.supplier_id %>/show"> Details</a></td>
    <td class="tableCell">
      <a href="/supplier/<%= recref.supplier_id %>/edit">Edit</a>
    </td>
    <td class="tableCell">
      <a href="/supplier/<%= recref.supplier_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/supplier/addrecord">Add New</a></p>
