<% if (allrecs.length > 0) {%>
<table>
    <!-- add table header -->
    <tr>
      <th>Transaction ID</th>
      <th>Order ID</th>
      <th>Product ID</th>
      <th>Sale Price</th>
      <th>Quantity</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td><%= recref.transaction_id %></td>
    <td><%= recref.order_id %></td>
    <td><%= recref.product_id %></td>
    <td><%= recref.saleprice %></td>
    <td><%= recref.qty %></td>
    <td><a href="/transaction/<%= recref.transaction_id %>/show"> Details</a></td>
    <td>
      <a href="/transaction/<%= recref.transaction_id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/transaction/<%= recref.transaction_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/transaction/addrecord">Add New</a></p>
