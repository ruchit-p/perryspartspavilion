<% if (allrecs.length > 0) {%>
<table>
    <!-- add table header -->
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Supplier ID</th>
      <th>Category ID</th>
      <th>Price</th>
      <th>Status</th>
      <th>Quantity</th>
      <th>Homepage</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td><%= recref.product_id %></td>
    <td><%= recref.productname %></td>
    <td><%= recref.supplier_id %></td>
    <td><%= recref.category_id %></td>
    <td><%= recref.prodprice %></td>
    <td><%= recref.status %></td>
    <td><%= recref.quantity %></td>
    <td><%= recref.homepage %></td>
    <td><a href="/product/<%= recref.product_id %>/show"> Details</a></td>
    <td>
      <a href="/product/<%= recref.product_id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/product/<%= recref.product_id %>/delete"onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>No Records Available</p>
<% } %>
<br>
<br>
<p><a href="/product/addrecord">Add New</a></p>
